            'linkImg' : 'img/new-year.png',
            'linkImgTitle' : 'новый год',
            'section': 'новый год'
          },
        ];

      ul.sections__list
        each val in sections
          li.sections__item
            img(src=val.linkImg, title=val.linkImgTitle).sections__item-img
            a(href=val.link, title=val.section).sections__item-link!= val.section
            ul.sections__desc-links
              li
                a(href="#").sections__desc-link Школьные товары
              li
                a(href="#").sections__desc-link Офисные принадлежности
              li
                a(href="#").sections__desc-link Бумага
              li
